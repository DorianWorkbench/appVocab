<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.resultat.ResultatMenu">

    <TextView
        android:id="@+id/choixQuestionnaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Choisissez le questionnaire"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
    />
    <RelativeLayout
        android:id="@+id/resultRl"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/choixQuestionnaire"
        android:layout_centerVertical="true">

        <ListView
            android:id="@+id/lvChoixQuestResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />
    </RelativeLayout>

    <Button
        android:id="@+id/btRetourResultMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:layout_below="@+id/resultRl"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
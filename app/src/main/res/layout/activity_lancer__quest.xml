<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.jouer.Lancer_Quest">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:text="@string/titleLancerQuest"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/llChoix"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lvQuestionnaire"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />
    </LinearLayout>

    <Button
        android:id="@+id/btRetourLancer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llChoix"
        android:text="@string/btRetourLancer"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>